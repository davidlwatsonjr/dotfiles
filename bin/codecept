#!/bin/bash
if [ ! -f ~/bin/codecept.phar ]; then
  [ ! -d ~/bin ] && mkdir ~/bin
  curl -sSo ~/bin/codecept.phar http://codeception.com/codecept.phar
fi

curDir=`pwd`
while [ ! -r codeception.yml ]; do
  cd ..
  if [ `pwd` == '/' ]; then
    cd $curDir
    break
  fi
done

php-cli ~/bin/codecept.phar $@
